<UserControl x:Class="UT_OperaterMPDr2.ucToolBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UT_OperaterMPDr2"
             xmlns:properties="clr-namespace:UT_OperaterMPDr2.Properties"
             mc:Ignorable="d">
    <UserControl.Resources>
        <!-- ツールバーボタンのスタイル -->
        <Style TargetType="Button" x:Key="ToolBarButtonStyle">
            <Setter Property="Width" Value="32"/>
            <Setter Property="Height" Value="32"/>
            <Setter Property="Margin" Value="3"/>
        </Style>
    </UserControl.Resources>
        <ToolBarTray>
        <ToolBar>
            <Button Style="{StaticResource ToolBarButtonStyle}" ToolTip="{x:Static properties:Resources.TIps_Initialize}">
                <Image Source="{StaticResource IconAction}"/>
            </Button>
            <Button Style="{StaticResource ToolBarButtonStyle}" ToolTip="Open Folder">
                <Image Source="{StaticResource Barcode_3PChA1}"/>
            </Button>
        </ToolBar>
    </ToolBarTray>
</UserControl>
