<UserControl x:Class="UT_OperaterMPDr2.ucMenueStrip"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:UT_OperaterMPDr2"
             xmlns:userControl="clr-namespace:UT_OperaterMPDr2.userControl"
             xmlns:properties="clr-namespace:UT_OperaterMPDr2.Properties"
             mc:Ignorable="d" >
    <Menu FontSize="20">
        <!--ファイル-->
        <MenuItem Header="{x:Static userControl:ucMenueStripRES.File}">
            <MenuItem.Icon>
                <Image Source="{StaticResource IconFolder}"/>
            </MenuItem.Icon>
            <!--  -->
            <MenuItem Header="{x:Static userControl:ucMenueStripRES.File}" InputGestureText="F5">
                <MenuItem.Icon>
                    <Image Source="{StaticResource IconAction}"/>
                </MenuItem.Icon>
            </MenuItem>
        </MenuItem>
        <!--操作 -->
        <MenuItem Header="{x:Static userControl:ucMenueStripRES.Action}">
            <MenuItem.Icon>
                <Image Source="{StaticResource IconAction}"/>
            </MenuItem.Icon>
        </MenuItem>
    </Menu>
</UserControl>
